{
  "name": "@sst-toolkit/plugin-sdk",
  "version": "1.0.0",
  "private": true,
  "description": "SDK for creating SST Toolkit plugins and extensions",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "default": "./src/types/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "default": "./src/hooks/index.ts"
    },
    "./component": {
      "types": "./src/component/index.ts",
      "default": "./src/component/index.ts"
    },
    "./types/*": {
      "types": "./src/types/*.ts",
      "default": "./src/types/*.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sst-toolkit/core": "workspace:*",
    "@sst-toolkit/shared": "workspace:*"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "sst": "^3.0.0"
  },
  "devDependencies": {
    "@pulumi/pulumi": "^3.0.0",
    "@types/react": "catalog:",
    "sst": "^3.0.0",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}

