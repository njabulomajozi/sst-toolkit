{
  "name": "@sst-toolkit/plugin-sdk",
  "version": "1.0.0",
  "private": true,
  "description": "SDK for creating SST Toolkit plugins and extensions",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js",
      "default": "./dist/types/index.mjs"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js",
      "default": "./dist/hooks/index.mjs"
    },
    "./component": {
      "types": "./dist/component/index.d.ts",
      "import": "./dist/component/index.mjs",
      "require": "./dist/component/index.js",
      "default": "./dist/component/index.mjs"
    },
    "./resources": {
      "types": "./dist/resources/index.d.ts",
      "import": "./dist/resources/index.mjs",
      "require": "./dist/resources/index.js",
      "default": "./dist/resources/index.mjs"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.mjs",
      "require": "./dist/templates/index.js",
      "default": "./dist/templates/index.mjs"
    },
    "./generator": {
      "types": "./dist/generator/index.d.ts",
      "import": "./dist/generator/index.mjs",
      "require": "./dist/generator/index.js",
      "default": "./dist/generator/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "pnpm lint:type && pnpm lint:code",
    "lint:code": "eslint .",
    "lint:type": "tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@sst-toolkit/core": "workspace:*",
    "@sst-toolkit/shared": "workspace:*"
  },
  "peerDependencies": {
    "@pulumi/aws": "catalog:",
    "react": "catalog:",
    "sst": "catalog:"
  },
  "devDependencies": {
    "@pulumi/pulumi": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "sst": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}






