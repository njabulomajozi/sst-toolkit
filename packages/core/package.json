{
  "name": "@sst-toolkit/core",
  "version": "1.0.0",
  "private": true,
  "description": "Core utilities for SST state parsing, relationship detection, and workflow building",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./state": {
      "types": "./src/state/index.ts",
      "default": "./src/state/index.ts"
    },
    "./relationships": {
      "types": "./src/relationships/index.ts",
      "default": "./src/relationships/index.ts"
    },
    "./workflow": {
      "types": "./src/workflow/index.ts",
      "default": "./src/workflow/index.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sst-toolkit/shared": "workspace:*"
  },
  "devDependencies": {
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}

